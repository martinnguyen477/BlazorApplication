@page "/TaskCreate";
@using BlazorApplication.Models.Enum;

<h3>TaskCreate</h3>
<EditForm Model="@Task" OnSubmit="SubmitCreateForm">
    <DataAnnotationsValidator />@* Khai báo form này phải Validation  *@
    <ValidationSummary></ValidationSummary> @* Component này để hiển thị message validation chung của cả form. *@
    <div class="form-group">
        <label for="Name">Name</label>
        <InputText class="form-control" @bind-Value="Task.TaskName"></InputText>
        <small id="nameHelp" class="form-text text-muted">Please enter task title here.</small>
        <ValidationMessage For="()=>Task.TaskName"></ValidationMessage>
    </div>
    <div class="form-group">
        <label for="Name">Priority</label>
        <InputSelect class="form-control" @bind-Value="Task.Priority">
            <option>Select a priority</option>
            @foreach (string item in Enum.GetNames(typeof(Priority)))
            {
                <option value="@item">@item</option>
            }
        </InputSelect>
        <ValidationMessage For="()=>Task.Priority"></ValidationMessage>
        <small id="nameHelp" class="form-text text-muted">Choose a priority which you want.</small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

</EditForm>
